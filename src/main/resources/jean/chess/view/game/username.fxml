<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="jean.chess.controller.game.UsernameController"
            stylesheets="@../../styles/game.css">
    <!-- Placer le VBox dans la rÃ©gion centrale -->
    <center>
        <VBox alignment="CENTER" spacing="20.0">

            <HBox alignment="CENTER" spacing="20.0">
                <VBox>
                    <Label text="White Username:" styleClass="labels"/>
                    <TextField promptText="USERNAME :" fx:id="white_username"/>
                </VBox>
                <VBox>
                    <Label text="Black Username:" styleClass="labels"/>
                    <TextField promptText="USERNAME :" fx:id="black_username"/>
                </VBox>

            </HBox>
            <Button text=" START " onAction="#start" fx:id="start"/>
            <Button text=" BACK " onAction="#back" fx:id="back"/>
            <Label text="" styleClass="labels" fx:id="error_message"/>

        </VBox>
    </center>
</BorderPane>